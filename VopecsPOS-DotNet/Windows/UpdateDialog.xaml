<Window x:Class="VopecsPOS.Windows.UpdateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Available"
        Height="320" Width="420"
        WindowStartupLocation="CenterScreen"
        Background="White"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border Background="White" CornerRadius="12" BorderBrush="#E0E0E0" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Icon -->
            <Border Grid.Row="0" Background="#E8F5E9" CornerRadius="40" Width="80" Height="80"
                    HorizontalAlignment="Center" Margin="0,0,0,15">
                <TextBlock Text="ðŸŽ‰" FontSize="36"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <!-- Title -->
            <TextBlock Grid.Row="1" Text="Update Available!"
                       FontSize="22" FontWeight="Bold" Foreground="#333333"
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <!-- Version Info -->
            <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBlock x:Name="VersionText"
                           FontSize="14" Foreground="#666666"
                           HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
            </StackPanel>

            <!-- Progress Bar (hidden by default) -->
            <StackPanel Grid.Row="3" x:Name="ProgressPanel" Visibility="Collapsed" Margin="0,10,0,10">
                <ProgressBar x:Name="DownloadProgress"
                             Height="6"
                             Minimum="0" Maximum="100"
                             Background="#E0E0E0" Foreground="#4CAF50"
                             BorderThickness="0"/>
                <TextBlock x:Name="ProgressText" Text="Downloading... 0%"
                           FontSize="12" Foreground="#666666"
                           HorizontalAlignment="Center" Margin="0,8,0,0"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="5" x:Name="ButtonPanel" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="LaterButton" Content="Later" Click="LaterButton_Click"
                        Background="#F5F5F5" Foreground="#666666"
                        FontSize="14" Padding="30,12"
                        BorderThickness="1" BorderBrush="#E0E0E0"
                        Margin="0,0,15,0" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="25"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="UpdateButton" Content="Update Now" Click="UpdateButton_Click"
                        Background="#4CAF50" Foreground="White"
                        FontSize="14" FontWeight="SemiBold"
                        Padding="30,12" BorderThickness="0" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="25"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
