<Window x:Class="VopecsPOS.Windows.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vopecs POS - Setup"
        Height="500" Width="450"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Border CornerRadius="16" Background="White">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.2"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" CornerRadius="16,16,0,0" Padding="20,15" MouseDown="TitleBar_MouseDown">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#1976D2" Offset="0"/>
                        <GradientStop Color="#1565C0" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <TextBlock Text="Vopecs POS"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <Button Content="âœ•"
                            HorizontalAlignment="Right"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="16"
                            Cursor="Hand"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="30">
                <!-- Logo -->
                <Border Background="#E3F2FD" CornerRadius="50" Width="80" Height="80" Margin="0,10,0,0">
                    <Viewbox Margin="15">
                        <Canvas Width="24" Height="24">
                            <Path Fill="#1976D2" Data="M17,2H7A2,2 0 0,0 5,4V6H19V4A2,2 0 0,0 17,2M19,7H5V22H19V7M16,11H13V14H16V11M12,14H8V11H12V14M16,19H13V15H16V19M12,19H8V15H12V19Z"/>
                        </Canvas>
                    </Viewbox>
                </Border>

                <!-- Welcome Text -->
                <TextBlock Text="Welcome"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,5"/>

                <TextBlock Text="Enter your POS system URL to get started"
                           FontSize="13"
                           Foreground="#757575"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- URL Input Card -->
                <Border Background="#F5F5F5" CornerRadius="12" Padding="20">
                    <StackPanel>
                        <TextBlock Text="System URL"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#424242"
                                   Margin="0,0,0,8"/>

                        <TextBox x:Name="UrlTextBox"
                                 Style="{StaticResource ModernTextBox}"
                                 Text="https://"
                                 FontSize="14"/>

                        <TextBlock Text="Enter the full URL including https://"
                                   FontSize="11"
                                   Foreground="#9E9E9E"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Error Message -->
                <TextBlock x:Name="ErrorText"
                           Foreground="#D32F2F"
                           FontSize="12"
                           Margin="0,10,0,0"
                           Visibility="Collapsed"
                           TextWrapping="Wrap"/>

                <!-- Save Button -->
                <Button Content="Save &amp; Continue"
                        Style="{StaticResource PrimaryButton}"
                        Margin="0,25,0,0"
                        Click="SaveButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
