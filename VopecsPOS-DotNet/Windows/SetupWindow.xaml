<Window x:Class="VopecsPOS.Windows.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vopecs POS - Setup"
        Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="White"
        ResizeMode="NoResize">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Logo -->
        <Border Grid.Row="0" Background="#E3F2FD" CornerRadius="50" Width="80" Height="80"
                HorizontalAlignment="Center" Margin="0,20,0,20">
            <TextBlock Text="POS" FontSize="24" FontWeight="Bold" Foreground="#1976D2"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- Welcome Text -->
        <TextBlock Grid.Row="1" Text="Welcome to Vopecs POS"
                   FontSize="22" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="2" Text="Enter your POS system URL to get started"
                   FontSize="13" Foreground="#757575"
                   HorizontalAlignment="Center" Margin="0,0,0,30"
                   TextWrapping="Wrap" TextAlignment="Center"/>

        <!-- URL Input -->
        <StackPanel Grid.Row="3">
            <TextBlock Text="System URL" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,8"/>
            <TextBox x:Name="UrlTextBox" Text="https://" FontSize="14" Padding="10"
                     BorderBrush="#E0E0E0" BorderThickness="1"/>
            <TextBlock Text="Enter the full URL including https://"
                       FontSize="11" Foreground="#9E9E9E" Margin="0,5,0,0"/>
            <TextBlock x:Name="ErrorText" Foreground="Red" FontSize="12"
                       Margin="0,10,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Save Button -->
        <Button Grid.Row="5" Content="Save and Continue"
                Click="SaveButton_Click"
                Background="#1976D2" Foreground="White"
                FontSize="14" FontWeight="SemiBold"
                Padding="20,12" Cursor="Hand"
                BorderThickness="0"/>
    </Grid>
</Window>
